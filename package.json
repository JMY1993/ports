{
  "name": "vibe-ports",
  "version": "0.1.0",
  "description": "Simple CLI to allocate, query and delete unique ports by (project, branch, purpose).",
  "bin": {
    "ports": "dist/index.js"
  },
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "dist",
    "db/baseline.sql",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs --target node18 --out-dir dist",
    "dev": "tsx src/index.ts --help",
    "test": "vitest run",
    "prepack": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "tsup": "^8.2.4",
    "tslib": "^2.7.0",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
